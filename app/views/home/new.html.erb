

<div class="container">
<%= form_for @contact, url: contacts_create_path, html: {class: ""} do |f| %>
<div class="row">
<div class="form-group">
<%= f.text_field :name, class: "form-control name", id: "name"%>
</div>
<div class="form-group">
  <%= f.text_field :phone, class: "form-control phone", id: "phone"%>    
</div>
</div>
<%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
</div>

<script type="text/javascript">
    $('#name, #phone').keyboard({
  lockInput: true,
});
</script>