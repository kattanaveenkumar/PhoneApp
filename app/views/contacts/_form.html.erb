<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading c-list">
          <span class="title">Contacts</span>
          <ul class="pull-right c-controls">
            <li><%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, contacts_new_path, remote: true%></li>
          </ul>
        </div><br/>
        <div class="row">
          <div class="col-xs-10 col-sm-offset-1">
            <div id="wrap">
              <%= form_for Contact.new, url: contacts_create_path, html: {class: "", remote: true} do |f| %>
                  <div class="row">
                    <div class="form-group">
                      <label> Name</label>
                      <%= f.text_field :name, class: "form-control name keyboard", id: "username"%>
                    </div>
                    <div class="form-group">
                      <label> Phone Number</label>
                      <%= f.text_field :phone, class: "form-control phone keyboard", id: "password"%>
                    </div>
                  </div>
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <div class="button-section">
                    <%= f.submit "Save", class: "btn btn-primary" %>
                    <%= f.submit "Cancel", class: "btn btn-primary pull-right" %>
                  </div>
              <% end %>
            </div>
          </div>
          <br />
        </div>
      </div>
    </div>
  </div>
</div>

<script>
    $('.keyboard').keyboard({
        lockInput: true,
    });
</script>